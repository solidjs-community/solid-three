{
  "name": "solid-three",
  "description": "SolidJS bindings for ThreeJS",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/solidjs-community/solid-three.git"
  },
  "sideEffects": false,
  "license": "MIT",
  "scripts": {
    "build:fiber": "pnpm --filter @solid-three/fiber build",
    "watch:fiber": "pnpm --filter @solid-three/fiber watch",
    "build:drei": "pnpm --filter @solid-three/drei build",
    "dev:playground": "pnpm --filter @solid-three/playground dev",
    "build:playground": "pnpm --filter @solid-three/playground build",
    "build:packages": "pnpm --filter @solid-three/* build",
    "install:packages": "pnpm --filter @solid-three/* install",
    "prepare": "git submodule init; git submodule update --remote --rebase; git submodule foreach -q --recursive 'git checkout $(git config -f $toplevel/.gitmodules submodule.$name.branch || echo master)'",
    "postinstall": "pnpm --filter @solid-three/* build"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@vinxi/tsconfig": "0.0.3",
    "concurrently": "^8.2.0"
  },
  "packageManager": "pnpm@7.26.0"
}
